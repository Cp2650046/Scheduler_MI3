                                            <tbody>

                                            </tbody>
                                        </table>
                                    </div>
                                <!-- </div> -->
                            <!-- </div> -->
                        <!-- </div> -->
                    </div>
                </div>
            </div>
        </div>
    <!-- </div> -->
    <%- include('../includes/script-bottom'); %>
    <script src="./projects/master_plans/js/master-main.js"></script>
    <script src="./projects/master_plans/js/master-plans.js"></script>
    <script src="./projects/master_plans/js/master-plan-afterpress.js"></script>
    <script src="./projects/master_plans/js/master-plan-drang-and-drop.js"></script>

</body>

